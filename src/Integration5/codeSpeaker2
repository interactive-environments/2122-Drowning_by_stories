import board
import time
from digitalio import DigitalInOut, Direction
from DFPlayer import DFPlayer

# Setup speaker
DFP_NEXT_PIN = board.D3 # attach to RX
DFP_BUSY_PIN = board.D4 # attach to TX

# Setup volume
PLAYER_VOL   = 30
dfplayer = DFPlayer(volume=PLAYER_VOL)

# Setup button
button = DigitalInOut(board.D2)
button.direction = Direction.INPUT


while True:
    if button.value:
        dfplayer.play(track=0)
        
